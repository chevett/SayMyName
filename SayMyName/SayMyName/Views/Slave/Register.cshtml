@model SayMyName.Models.SlaveViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title></title>
</head>
	<body>
		<h1>Slave Registration</h1>
		<div>
			@using(Html.BeginForm())
			{

				<ul>
					<li>
						@Html.LabelFor(m => m.Description)
						@Html.TextBoxFor(m => m.Description)
					</li>
					<li>
						@Html.LabelFor(m => m.Fingerprint)
						@Html.TextBoxFor(m => m.Fingerprint, new { @readonly="readonly"})
					</li>
					<li>
						@Html.LabelFor(m => m.Location)
						@Html.TextBoxFor(m => m.Location, new { @readonly="readonly"})
					</li>
				</ul>

				<input type="submit" value="Register" />
			}
		</div>
	</body>
</html>
